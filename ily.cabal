                       base                   == 4.6.0.1
                       , filepath             >= 1.3 && < 1.4
                       , directory            == 1.2.0.1
                       , data-default         == 0.5.3
                       , haskeline            >= 0.6.3 && < 0.8
                       , pandoc-types         >= 1.12.3 && < 1.12.4.2 
                       , optparse-applicative == 0.9.1
                       , HDBC == 2.4.0.0
                       , HDBC-sqlite3 == 2.3.3.0
                       , ily                    
                       , hspec                     >= 1.3
